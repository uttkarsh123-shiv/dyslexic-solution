{
  "manifest_version": 3,
  "name": "Dyslexic-sol",
  "description": "Tool for dyslexic people",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dyslexic",
    "default_icon": "icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "storage",
    "identity"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/OpenDyslexic-Bold.otf"],
      "matches": ["<all_urls>"]
    }
  ]
}
